{
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "moduleResolution": "node",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "jsx": "react-jsx",
    "strict": true,
    "noImplicitReturns": true,
    "rootDir": "src",
    "outDir": "dist",
    "paths": {
      "@/*": ["./src/*", "./dist/*"],
      "pages/*": ["./src/pages/*"],
      "components/*": ["./src/components/*"],
      "types/*": ["./src/@types/*"],
      "public/*": ["./public/*"]
    },
    "types": ["vite-plugin-svgr/client", "vitest/globals"]
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "**/*.stories.*", "tests", "vite.config.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
